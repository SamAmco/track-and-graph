<resources>
    <style name="AppTheme" parent="AppThemeBase">
        <!--COLORS-->
        <item name="colorAccent">@color/faded_orange</item>
        <item name="colorPrimary">@color/faded_light_blue</item>
        <item name="colorPrimaryDark">@color/faded_dark_blue</item>
        <item name="colorSecondary">@color/faded_orange</item>
        <item name="colorPrimaryContainer">@color/faded_orange</item>
        <item name="colorSurface">@color/mid_charcoal</item>
        <item name="colorOnSurface">@color/light_gray</item>
        <item name="colorOnSecondary">@color/blue_white_pastel</item>
        <item name="colorPrimaryVariant">@color/faded_dark_blue</item>
        <item name="colorSecondaryVariant">@color/faded_dark_orange</item>
        <item name="errorTextColor">@color/faded_dark_orange</item>
        <item name="colorOnError">@color/faded_green</item>
        <item name="colorControlNormal">@color/blue_white_pastel</item>
        <item name="colorControlHighlight">@color/dark_gray</item>
        <item name="toolbarBackgroundColor">@color/light_charcoal</item>
        <item name="android:textColorPrimary">@color/blue_white_pastel</item>
        <item name="android:textColorPrimaryDisableOnly">@color/blue_white_pastel</item>
        <item name="android:textColorSecondary">@color/light_gray</item>
        <item name="android:textColorHint">@color/mid_gray</item>
        <item name="android:windowBackground">@color/dark_charcoal</item>
    </style>

    <style name="AppTheme.AlertDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:background">?attr/colorSurface</item>
        <item name="colorAccent">@color/faded_orange</item>
        <item name="android:textColorPrimary">@color/blue_white_pastel</item>
        <item name="android:textColorPrimaryDisableOnly">@color/blue_white_pastel</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>
    <style name="NegativeButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="NeutralButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="PositiveButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/faded_orange</item>
    </style>
</resources>
