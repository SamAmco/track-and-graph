<resources>
    <style name="Style.CheckBoxStyle" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">@color/checkbox_color</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="Style.GrayButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?selectorButtonColor</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="shapeAppearance">@style/ShapeAppearance.TnG.Corner.Small</item>
        <item name="android:ellipsize">start</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Style.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="shapeAppearance">@style/ShapeAppearance.TnG.Corner.Small</item>
    </style>

    <style name="Style.FAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="shapeAppearance">@style/ShapeAppearance.TnG.FAB</item>
        <item name="tint">?colorControlNormal</item>
    </style>

    <style name="ShapeAppearance.TnG.FAB" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">1000dp</item>
    </style>

    <style name="Style.AddBarButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?colorControlHighlight</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="shapeAppearance">@style/ShapeAppearance.TnG.Corner.Small</item>
    </style>

    <style name="Style.ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/ShapeAppearance.TnG.Corner.Small</item>
    </style>

    <style name="Style.WideBottomButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?colorPrimary</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="shapeAppearance">@style/ShapeAppearance.TnG.Corner.Small</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:elevation">10dp</item>
    </style>

    <style name="Style.OverflowMenuStyle" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">?attr/colorSurface</item>
    </style>

    <style name="Style.CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/colorSurface</item>
    </style>

    <style name="Style.OverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">?attr/colorControlNormal</item>
    </style>

    <style name="Style.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/toolbarBackgroundColor</item>
        <item name="titleTextColor">?attr/colorControlNormal</item>
    </style>

    <style name="Style.EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">?attr/colorSecondary</item>
        <item name="colorControlHighlight">?attr/colorSecondary</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
    </style>

    <style name="Style.EmptyPageHintTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.Subtitle2</item>
        <item name="android:alpha">0.6</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Style.ExpansiveTextInputStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/expansive_text_box_background</item>
        <item name="backgroundTint">@null</item>
        <item name="android:inputType">textMultiLine|textAutoCorrect|textCapSentences</item>
    </style>

</resources>
