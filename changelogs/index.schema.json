{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Release Notes Index",
  "description": "Index of available release notes with their localized file paths",
  "type": "object",
  "properties": {
    "changelogs": {
      "type": "object",
      "patternProperties": {
        "^\\d+\\.\\d+\\.\\d+(-.*)?$": {
          "type": "object",
          "properties": {
            "en": {
              "type": "string",
              "pattern": "^changelogs/\\d+\\.\\d+\\.\\d+(-.*)?/en\\.md$"
            },
            "de": {
              "type": "string",
              "pattern": "^changelogs/\\d+\\.\\d+\\.\\d+(-.*)?/de\\.md$"
            },
            "es": {
              "type": "string",
              "pattern": "^changelogs/\\d+\\.\\d+\\.\\d+(-.*)?/es\\.md$"
            },
            "fr": {
              "type": "string",
              "pattern": "^changelogs/\\d+\\.\\d+\\.\\d+(-.*)?/fr\\.md$"
            }
          },
          "required": ["en"],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["changelogs"],
  "additionalProperties": false
}
