{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Release Notes Index",
  "description": "Index of available release notes with their localized file paths",
  "type": "object",
  "properties": {
    "changelogs": {
      "type": "object",
      "patternProperties": {
        "^\\d+\\.\\d+\\.\\d+(-.*)?$": {
          "type": "object",
          "properties": {
            "en": {
              "type": "string"
            },
            "de": {
              "type": "string"
            },
            "es": {
              "type": "string"
            },
            "fr": {
              "type": "string"
            }
          },
          "required": ["en"],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["changelogs"],
  "additionalProperties": false
}
