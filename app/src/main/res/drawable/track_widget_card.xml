<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <padding
                android:bottom="@dimen/card_margin_small"
                android:left="@dimen/card_margin_small"
                android:right="@dimen/card_margin_small"
                android:top="@dimen/card_margin_small" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <item>
        <shape>
            <padding
                android:bottom="4dp"
                android:left="-4dp"
                android:right="4dp"
                android:top="-4dp" />
            <solid android:color="@color/light_blue" />
            <corners android:radius="@dimen/card_corner_radius" />
        </shape>
    </item>
    <!-- Background -->
    <item>
        <shape>
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/card_corner_radius" />
        </shape>
    </item>

</layer-list>