{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Remote Configuration Schema",
  "description": "Schema for remote configuration endpoints",
  "type": "object",
  "required": ["endpoints", "trusted-lua-script-sources"],
  "properties": {
    "endpoints": {
      "type": "object",
      "description": "Collection of endpoint configurations",
      "required": [
        "github",
        "tutorial-root",
        "tutorial-tracking",
        "tutorial-lua",
        "tutorial-graphs",
        "lua-community-scripts-root",
        "play-store-page",
        "function-catalogue-location",
        "function-catalogue-signature",
        "functions-docs"
      ],
      "properties": {
        "github": {
          "type": "string",
          "format": "uri"
        },
        "tutorial-root": {
          "type": "string",
          "format": "uri"
        },
        "tutorial-tracking": {
          "type": "string",
          "format": "uri"
        },
        "tutorial-lua": {
          "type": "string",
          "format": "uri"
        },
        "tutorial-graphs": {
          "type": "string",
          "format": "uri"
        },
        "lua-community-scripts-root": {
          "type": "string",
          "format": "uri"
        },
        "play-store-page": {
          "type": "string",
          "format": "uri"
        },
        "function-catalogue-location": {
          "type": "string",
          "format": "uri",
          "description": "URL to the function catalogue Lua file"
        },
        "function-catalogue-signature": {
          "type": "string",
          "format": "uri",
          "description": "URL to the function catalogue signature file"
        },
        "functions-docs": {
          "type": "string",
          "format": "uri",
          "description": "URL to the functions documentation"
        }
      },
      "additionalProperties": false
    },
    "trusted-lua-script-sources": {
      "type": "array",
      "description": "List of trusted URLs for Lua script sources",
      "items": {
        "type": "string",
        "format": "uri"
      }
    }
  }
}
